extends ../symlinks/templates/base.pug

block vars
  - var htmlClass = 'reading';
  - var page = 'reading';
  - var importPrefix = 'https://www.mollywhite.net'
  - var showTagCount = true

block head
  link(rel="stylesheet", href=`${importPrefix}/css/reading.css`)
  include ../symlinks/mixins/titleAndDescription.pug
  +titleAndDescription('Reading', 'Interested in what I\'m reading these days? Check out my reading lists.')
  link(rel="stylesheet", href=`${importPrefix}/css/reading.css`)

block body
  .content-box
    p Interested in what I'm reading these days? Check out my reading lists.

    .reading-section
      h3
        a(href="/reading/shortform") Shortform reading list 
      div.rss-link
        i.fas.fa-rss(aria-hidden="true") 
        |  
        a(href="https://mollywhite.net/reading/shortform/feed.xml", target="_blank") RSS 
      .reading-section-body  
        include ../mixins/currentlyReadingArticleSummary.pug
        +currentlyReadingArticleSummary(mostRecentShortform)

    .reading-section
      h3
        a(href="/reading/blockchain") Blockchain reading list 
      div.rss-link
        i.fas.fa-rss(aria-hidden="true") 
        |  
        a(href="https://mollywhite.net/reading/blockchain/feed.xml", target="_blank") RSS
      .reading-section-body  
        +currentlyReadingArticleSummary(mostRecentBlockchain)
          
    .reading-section
      h3
        a(href="/reading/fiction") Fiction
      .reading-section-body  
        include ../mixins/currentlyReadingSummary.pug
        +currentlyReadingSummary(currentlyReadingPleasure)
        
    .reading-section
      h3
        a(href="/reading/reference") Non-fiction
      .reading-section-body  
        | Some of these are reference books for Wikipedia articles I'm
        | working on, and not necessarily books I've read cover-to-cover.
        include ../mixins/currentlyReadingSummary.pug
        +currentlyReadingSummary(currentlyReadingReference)