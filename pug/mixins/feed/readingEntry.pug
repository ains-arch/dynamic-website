mixin readingEntry(entry, readingEntry, {isLoggedIn=false} = {})
  article.entry.h-entry.hentry
    header
      .post-icon.icon
        include ./icon.pug
        +icon(entry.icon)
        .description #{entry.verb}:
    .p-content
      include ../shortformArticle.pug
      +shortformArticle(readingEntry, false, true)
    footer.footer
      .flex-row.post-meta
        .timestamp
          time.dt-published(datetime=entry.createdAt.toISOString(), title=entry.absoluteTime) #{entry.humanTime}
          if isLoggedIn
            span.edit-icon.icon
              a(href=`/feed/tagger/reading${'shortform' in entry ? 'Shortform' : 'Blockchain'}/${entry._id}`)
                include ../../icons/pencil.svg
          |  from the #[a(href=`/reading/${'shortform' in entry ? 'shortform' : 'blockchain'}`) #{'shortform' in entry ? 'shortform' : 'blockchain'} reading list].
      .tags
        if entry.tags && entry.tags.length
          each tag in entry.tags 
            a.tag.p-category(href=`/feed/tag/${tag.value}` title=`See all feed posts tagged "${tag.text}"` rel="category tag") #{tag.text}